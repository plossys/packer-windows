{
  "builders": [
    {
      "type": "vmware-iso",
      "communicator": "winrm",
      "vm_name": "windows_2016_docker",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "2m",
      "skip_compaction": true,
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\" && netsh advfirewall set allprofiles state on",
      "guest_os_type": "windows8srv-64",
      "disk_size": 61440,
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "version": 10,
      "floppy_files": [
        "./answer_files/2016/Autounattend.xml",
        "./floppy/WindowsPowershell.lnk",
        "./floppy/PinTo10.exe",
        "./scripts/disable-winrm.ps1",
        "./scripts/dis-updates.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/docker/win-updates.ps1",
        "./scripts/docker/enable-winrm.ps1",
        "./scripts/enable-winrm-after-customization.bat",
        "./scripts/enable-winrm-after-customization.xml"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "2048",
        "numvcpus": "2",
        "scsi0.virtualDev": "lsisas1068"
      },
      "vmx_data_post": {
        "ethernet0.virtualDev": "vmxnet3"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/vm-guest-tools.bat"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/pin-powershell.bat",
        "./scripts/uac-enable.bat"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/openssh.ps1",
        "./scripts/docker/add-docker-group.ps1",
        "./scripts/docker/install-docker.ps1",
        "./scripts/docker/open-docker-insecure-port.ps1",
        "./scripts/docker/remove-docker-key-json.ps1"
      ]
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/uac-enable.bat",
        "./scripts/set-winrm-automatic.bat",
        "./scripts/rsync.bat",
        "./scripts/docker/delay-winrm-vcloud.bat",
        "./scripts/vagrant-ssh.bat",
        "./scripts/dis-updates.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant-vmware-ovf",
      "provider": "vcloud",
      "output": "windows_2016_docker_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016.template"
    }
  ],
  "variables": {
    "iso_url": "http://roecloudsrv001/vagrant/iso/win2016_eval_en/14393.0.160715-1616.RS1_RELEASE_SERVER_EVAL_X64FRE_EN-US.ISO",
    "iso_checksum_type": "md5",
    "iso_checksum": "18a4f00a675b0338f3c7c93c4f131beb",
    "autounattend": "./answer_files/2016/Autounattend.xml"
  }
}
